#################################################################
#    Object Properties
#################################################################

###  http://iflastandards.info/ns/lrm/lrmoo/R67_has_part
lrmoo:R67_has_part rdf:type owl:ObjectProperty .


###  http://www.cidoc-crm.org/cidoc-crm/P129_is_about
cidoc-crm:P129_is_about rdf:type owl:ObjectProperty .


###  http://www.cidoc-crm.org/cidoc-crm/P129i_is_subject_of
cidoc-crm:P129i_is_subject_of rdf:type owl:ObjectProperty .


###  http://www.cidoc-crm.org/cidoc-crm/P2_has_type
cidoc-crm:P2_has_type rdf:type owl:ObjectProperty .


###  http://www.w3.org/2006/time#hasBeginning
<http://www.w3.org/2006/time#hasBeginning> rdf:type owl:ObjectProperty ;
                                           rdfs:subPropertyOf <http://www.w3.org/2006/time#hasTime> ;
                                           rdfs:comment "Beginning of a temporal entity"@en ;
                                           rdfs:label "has beginning"@en .


###  http://www.w3.org/2006/time#hasEnd
<http://www.w3.org/2006/time#hasEnd> rdf:type owl:ObjectProperty ;
                                     rdfs:subPropertyOf <http://www.w3.org/2006/time#hasTime> ;
                                     rdfs:comment "End of a temporal entity"@en ;
                                     rdfs:label "has end"@en .


###  http://www.w3.org/2006/time#hasTime
<http://www.w3.org/2006/time#hasTime> rdf:type owl:ObjectProperty ;
                                      rdfs:comment "Supports the association of a temporal entity (instant or interval) to any thing"@en ;
                                      rdfs:label "has time"@en .


###  https://hdn.dantenetwork.it/ontology#fromPosition
hdn:fromPosition rdf:type owl:ObjectProperty ;
                 rdfs:domain hdn:TextFragment ;
                 rdfs:range hdn:Position ;
                 rdfs:comment "from position"@en ;
                 rdfs:label "fromPosition"@en .


###  https://hdn.dantenetwork.it/ontology#hasRefObject
hdn:hasRefObject rdf:type owl:ObjectProperty ;
                 rdfs:subPropertyOf cidoc-crm:P129_is_about ;
                 rdfs:domain hdn:Reference ;
                 rdfs:range cidoc-crm:E1_CRM_Entity ;
                 rdfs:comment "Object of a Connective Claim, i.e. the propositional content that helps to understand the subject."@en ;
                 rdfs:label "hasRefObject"@en .


###  https://hdn.dantenetwork.it/ontology#hasRefSubjObj
hdn:hasRefSubjObj rdf:type owl:ObjectProperty ;
                  rdfs:subPropertyOf cidoc-crm:P2_has_type ;
                  rdfs:domain hdn:Reference ;
                  rdfs:range hdn:Subject-ObjectRelationship ;
                  rdfs:label "hasRefSubjObj"@en .


###  https://hdn.dantenetwork.it/ontology#hasRefSubject
hdn:hasRefSubject rdf:type owl:ObjectProperty ;
                  rdfs:subPropertyOf cidoc-crm:P46_is_composed_of ;
                  rdfs:domain hdn:Reference ;
                  rdfs:range cidoc-crm:E90_Symbolic_Object ;
                  rdfs:comment "The subject of a ConnectiveClaim is a propositional object, usually a textual passage, that can be better understood by consulting the object, which can be another text passage, a motif, a person, and more."@en ;
                  rdfs:label "hasRefSubject"@en .


###  https://hdn.dantenetwork.it/ontology#hasSource
hdn:hasSource rdf:type owl:ObjectProperty ;
              rdfs:subPropertyOf cidoc-crm:P129i_is_subject_of ;
              rdfs:domain hdn:Reference ;
              rdfs:range hdn:Sentence ;
              rdfs:comment "Source that is establishing the ConnectiveClaim, which links a subject to an explanative object."@en ;
              rdfs:label "hasRefSource"@en .


###  https://hdn.dantenetwork.it/ontology#positionUnit
hdn:positionUnit rdf:type owl:ObjectProperty ;
                 rdfs:subPropertyOf lrmoo:R70_has_dimension ;
                 rdfs:domain hdn:Position ;
                 rdfs:range lrmoo:F2_Expression ;
                 rdfs:label "positionUnit"@en .


###  https://hdn.dantenetwork.it/ontology#toPosition
hdn:toPosition rdf:type owl:ObjectProperty ;
               rdfs:domain hdn:TextFragment ;
               rdfs:range hdn:Position ;
               rdfs:comment "Signals the ending position of a text unit."@en ;
               rdfs:label "to Position"@en .


###  https://otraorg.github.io/ontology#asserted_as_a_connection
ConnectiveOntology:asserted_as_a_connection rdf:type owl:ObjectProperty ;
                                            owl:inverseOf ConnectiveOntology:was_asserted_as_a_connection_by ;
                                            rdfs:domain cidoc-crm:E1_CRM_Entity ;
                                            rdfs:range ConnectiveOntology:ConnectiveClaim ;
                                            rdfs:comment "Records who asserted a certain ConnectiveClaim."@en ;
                                            rdfs:label "asserted as a connection"@en .


###  https://otraorg.github.io/ontology#hasParallelType
ConnectiveOntology:hasParallelType rdf:type owl:ObjectProperty ;
                                   rdfs:subPropertyOf cidoc-crm:P2_has_type ;
                                   owl:inverseOf ConnectiveOntology:isParallelTypeOf ;
                                   rdfs:domain ConnectiveOntology:ConnectiveClaim ;
                                   rdfs:range ConnectiveOntology:ParallelType ;
                                   rdfs:comment "Further specifies a Textual or Topica Parallel by giving it a type, such as \"Verbatim\", or \"LooseRendering\"."@en ;
                                   rdfs:label "has parallel type"@en .


###  https://otraorg.github.io/ontology#hasSignallingObject
ConnectiveOntology:hasSignallingObject rdf:type owl:ObjectProperty ;
                                       owl:inverseOf ConnectiveOntology:isSignallingObjectOf ;
                                       rdfs:domain ConnectiveOntology:ConnectiveClaim ;
                                       rdfs:range owl:Thing ;
                                       rdfs:comment "Specifies what object the signalling of a Connective Claim refers to, e.g. \"Jesus\", \"The Bible\", \"some person\", or \"some book\"."@en ;
                                       rdfs:label "has signalling object"@en .


###  https://otraorg.github.io/ontology#hasSignallingType
ConnectiveOntology:hasSignallingType rdf:type owl:ObjectProperty ;
                                     rdfs:subPropertyOf cidoc-crm:P2_has_type ;
                                     owl:inverseOf ConnectiveOntology:isSignallingTypeOf ;
                                     rdfs:domain ConnectiveOntology:ConnectiveClaim ;
                                     rdfs:range ConnectiveOntology:Citation_Signalling ;
                                     rdfs:comment "Links a Connective Claim to a specific kind of signalling. Signalling indicates whether and how the subject makes clear that it re-uses or cites another text."@en ;
                                     rdfs:label "Has signalling type"@en .


###  https://otraorg.github.io/ontology#isParallelTypeOf
ConnectiveOntology:isParallelTypeOf rdf:type owl:ObjectProperty ;
                                    rdfs:subPropertyOf cidoc-crm:P2i_is_type_of ;
                                    rdfs:domain ConnectiveOntology:ParallelType ;
                                    rdfs:range ConnectiveOntology:ConnectiveClaim ;
                                    rdfs:comment "Signifies that a certain ParallelType is the type of a specific ConnectiveClaim."@en ;
                                    rdfs:label "is parallel type of"@en .


###  https://otraorg.github.io/ontology#isSignallingObjectOf
ConnectiveOntology:isSignallingObjectOf rdf:type owl:ObjectProperty ;
                                        rdfs:domain owl:Thing ;
                                        rdfs:range ConnectiveOntology:ConnectiveClaim ;
                                        rdfs:comment "Affirms to which ConnectiveClaim a signalling object belongs."@en ;
                                        rdfs:label "is signalling object of"@en .


###  https://otraorg.github.io/ontology#isSignallingTypeOf
ConnectiveOntology:isSignallingTypeOf rdf:type owl:ObjectProperty ;
                                      rdfs:subPropertyOf cidoc-crm:P2i_is_type_of ;
                                      rdfs:domain ConnectiveOntology:Citation_Signalling ;
                                      rdfs:range ConnectiveOntology:ConnectiveClaim ;
                                      rdfs:comment "Specifies which ConnectiveClaim a SignallingType typifies."@en ;
                                      rdfs:label "is signalling type of"@en .


###  https://otraorg.github.io/ontology#was_asserted_as_a_connection_by
ConnectiveOntology:was_asserted_as_a_connection_by rdf:type owl:ObjectProperty ;
                                                   rdfs:domain ConnectiveOntology:ConnectiveClaim ;
                                                   rdfs:range cidoc-crm:E1_CRM_Entity ;
                                                   rdfs:comment "Basic predicate to link a Connective Claim to its act of creation, often the publication of a researcher."@en ;
                                                   rdfs:label "was asserted as a connection by"@en .


