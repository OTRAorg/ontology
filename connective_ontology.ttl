#################################################################

###  http://www.w3.org/2002/07/owl#topDataProperty
owl:topDataProperty rdfs:domain [ rdf:type owl:Restriction ;
                                  owl:onProperty owl:topDataProperty ;
                                  owl:someValuesFrom owl:rational
                                ] .


###  https://hdn.dantenetwork.it/ontology#positionOffset
hdn:positionOffset rdf:type owl:DatatypeProperty ,
                            owl:FunctionalProperty ;
                   rdfs:domain hdn:Position ;
                   rdfs:range xsd:integer ;
                   rdfs:label "positionOffset"@en .


###  https://otraorg.github.io/ontology#has_claim_text
ConnectiveOntology:has_claim_text rdf:type owl:DatatypeProperty ;
                                  rdfs:domain ConnectiveOntology:ConnectiveClaim ;
                                  rdfs:range xsd:string ;
                                  rdfs:comment "Gives the text that establishes a connective claim"@en ;
                                  rdfs:label "has claim text" .


###  https://otraorg.github.io/ontology#has_explicit
ConnectiveOntology:has_explicit rdf:type owl:DatatypeProperty ;
                                rdfs:domain cidoc-crm:E28_Conceptual_Object ;
                                rdfs:range xsd:string ;
                                rdfs:comment "Marks the last few words of a textual unit." ;
                                rdfs:label "has explicit" .


###  https://otraorg.github.io/ontology#has_incipit
ConnectiveOntology:has_incipit rdf:type owl:DatatypeProperty ;
                               rdfs:domain cidoc-crm:E28_Conceptual_Object ;
                               rdfs:range xsd:string ;
                               rdfs:comment "Marks the first few words of a text fragment." ;
                               rdfs:label "has incipit"@en .


###  https://otraorg.github.io/ontology#has_ref_text
ConnectiveOntology:has_ref_text rdf:type owl:DatatypeProperty ;
                                rdfs:domain ConnectiveOntology:ConnectiveClaim ;
                                rdfs:range xsd:string ;
                                rdfs:comment "Gives the text that is assigned to the reference within the text itself" ;
                                rdfs:label "has ref text" .


###  https://otraorg.github.io/ontology#has_signalling_text
ConnectiveOntology:has_signalling_text rdf:type owl:DatatypeProperty ;
                                       rdfs:domain ConnectiveOntology:ConnectiveClaim ;
                                       rdfs:range xsd:string ;
                                       rdfs:comment "Gives the part of the main text that signals the reference."@en ;
                                       rdfs:label "has signalling text"@en .


